---
import Block, {type Props as BlockProps} from "components/block.astro"

// eslint-disable-next-line no-undef
type Props<T extends keyof HTMLElementTagNameMap> = BlockProps<T> & {alwaysBlueLine?: boolean}

const {class: classProp, alwaysBlueLine, ...restProps} = Astro.props
---
<Block {...restProps} class:list={["container", classProp]}>
  <header class:list={["header", {"always-blue": alwaysBlueLine}]}>
    <slot name="header" />
  </header>
  <slot name="content" />
</Block>

<style>
  .header {
    padding: 1.5step 2step;
    border-bottom: 2px solid var(--color-border);
    transition: border-color ease 0.2s;

    &.always-blue {
      border-color: var(--color-accent);
    }
  }

  .container:hover .header {
    border-color: var(--color-accent);
  }
</style>
